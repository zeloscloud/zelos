# Justfile for zelos-trace-grpc crate

set shell := ["bash", "-cu"]

default:
	@just --list

build:
	cargo build -p zelos-trace-grpc

check:
	cargo check -p zelos-trace-grpc --all-targets

fmt:
	cargo fmt -p zelos-trace-grpc

clippy:
	cargo clippy -p zelos-trace-grpc --all-targets -- -D warnings

test:
	cargo test -p zelos-trace-grpc

bench:
	cargo bench -p zelos-trace-grpc

# List and run top-level examples (re-uses root Justfile)
examples:
	@just -f ../../Justfile examples-list
